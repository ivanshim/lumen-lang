LET scale = 100000;
LET pi = 3 * scale;
LET k = 1;
LET sign = 1;
LET iterations = 0;
LET max_iter = 1000;

WHILE (iterations < max_iter) {
    LET denom = (2 * k) * (2 * k + 1) * (2 * k + 2);
    LET term = (4 * scale) / denom;
    LET pi = pi + sign * term;
    LET sign = -sign;
    LET k = k + 1;
    LET iterations = iterations + 1;
}

PRINT(pi);
