# Parameter: fib_index (default: 1000)
# Usage: lumen-lang fibonacci_loop.lm [fib_index]
# Example: lumen-lang fibonacci_loop.lm 1000
fib_index = 1000
if ARGS != ""
    fib_index = int(ARGS)

a = 0
b = 1
count = 0

while count < fib_index
    next = a + b
    a = b
    b = next
    count = count + 1

write("Fibonacci number at index ")
write(fib_index)
write(": ")
print(a)
