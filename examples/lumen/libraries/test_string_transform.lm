# String Transformation Examples
# Demonstrates string_to_upper, string_to_lower, char_to_upper, char_to_lower, reverse_characters

print("=== String Case Transformation ===")
print("")

# Convert strings to uppercase
print("Uppercase conversion:")
print("  string_to_upper('hello'): " . string_to_upper("hello"))           # HELLO
print("  string_to_upper('world'): " . string_to_upper("world"))           # WORLD
print("  string_to_upper('Hello123'): " . string_to_upper("Hello123"))     # HELLO123
print("")

# Convert strings to lowercase
print("Lowercase conversion:")
print("  string_to_lower('HELLO'): " . string_to_lower("HELLO"))           # hello
print("  string_to_lower('WORLD'): " . string_to_lower("WORLD"))           # world
print("  string_to_lower('Hello123'): " . string_to_lower("Hello123"))     # hello123
print("")

# Single character transformations
print("Single character transformations:")
print("  char_to_upper('a'): " . char_to_upper("a"))         # A
print("  char_to_upper('z'): " . char_to_upper("z"))         # Z
print("  char_to_lower('A'): " . char_to_lower("A"))         # a
print("  char_to_lower('Z'): " . char_to_lower("Z"))         # z
print("  char_to_upper('5'): " . char_to_upper("5"))         # 5 (unchanged)
print("  char_to_lower('5'): " . char_to_lower("5"))         # 5 (unchanged)
print("")

# String reversal
print("String reversal:")
print("  reverse_characters('abc'): " . reverse_characters("abc"))                 # cba
print("  reverse_characters('hello'): " . reverse_characters("hello"))             # olleh
print("  reverse_characters('racecar'): " . reverse_characters("racecar"))         # racecar
print("  reverse_characters('12345'): " . reverse_characters("12345"))             # 54321
print("")

# Practical example: title case
print("=== Practical Example: Title Case ===")

fn to_title_case(s)
    if len(s) == 0
        return s
    char_to_upper(char_at(s, 0)) . substring_end(string_to_lower(s), 1)

words = ["hello", "world", "lumen", "PROGRAMMING"]
i = 0
while i < len(words)
    word = words[i]
    print("  " . word . " -> " . to_title_case(word))
    i = i + 1
print("")

# Practical example: palindrome checker
print("=== Practical Example: Palindrome Checker ===")

fn is_palindrome(s)
    normalized = string_to_lower(s)
    normalized == reverse_characters(normalized)

test_words = ["racecar", "hello", "madam", "world", "level"]
i = 0
while i < len(test_words)
    word = test_words[i]
    is_pal = is_palindrome(word)
    print("  '" . word . "' is palindrome: " . str(is_pal))
    i = i + 1
