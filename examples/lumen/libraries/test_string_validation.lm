# Test alphabetic string validation
print("Alphabetic string validation:")
print("  is_alpha_string('hello'): " . str(is_alpha_string("hello")))         # true
print("  is_alpha_string('WORLD'): " . str(is_alpha_string("WORLD")))         # true
print("  is_alpha_string('LuMeN'): " . str(is_alpha_string("LuMeN")))         # true
