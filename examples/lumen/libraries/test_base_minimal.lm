# Minimal test for integer_to_base_string() function

alphabet = "0123456789abcdefghijklmnopqrstuvwxyz"

fn integer_to_base_string(n, radix)
    if n == 0
        return "0"

    negative = false
    if n < 0
        negative = true
        n = -n

    result = ""

    while n > 0
        digit = n % radix
        result = char_at(alphabet, digit) . result
        n = n // radix

    if negative
        result = "-" . result

    result

print("Test: Convert 255 to hex")
result = integer_to_base_string(255, 16)
print(result)

print("Test: Convert 42 to binary")
result2 = integer_to_base_string(42, 2)
print(result2)

print("Done!")
