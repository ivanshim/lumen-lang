print("  is_alpha('Z'): " . value_to_string(is_alpha("Z")))      # true
print("  is_alpha('5'): " . value_to_string(is_alpha("5")))      # false
print("  is_alpha('!'): " . value_to_string(is_alpha("!")))      # false
print("")

# Test alphanumeric detection
print("Alphanumeric detection:")
print("  is_alnum('a'): " . value_to_string(is_alnum("a")))      # true
print("  is_alnum('Z'): " . value_to_string(is_alnum("Z")))      # true
print("  is_alnum('5'): " . value_to_string(is_alnum("5")))      # true
print("  is_alnum('!'): " . value_to_string(is_alnum("!")))      # false
print("  is_alnum(' '): " . value_to_string(is_alnum(" ")))      # false
print("")

# Practical example: validate username characters
print("=== Practical Example: Username Validation ===")

fn is_valid_username_char(c)
    is_alnum(c) or c == "_" or c == "-"

let test_chars = ["a", "Z", "5", "_", "-", "!", "@"]
let i = 0
while i < len(test_chars)
    let c = test_chars[i]
    let valid = is_valid_username_char(c)
    print("  '" . c . "' is valid username char: " . value_to_string(valid))
    i = i + 1
