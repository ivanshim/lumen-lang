print("  is_digit('9'): " . value_to_string(is_digit("9")))      # true
print("  is_digit('a'): " . value_to_string(is_digit("a")))      # false
print("  is_digit('A'): " . value_to_string(is_digit("A")))      # false
print("")

# Test alphabetic detection
print("Alphabetic detection:")
