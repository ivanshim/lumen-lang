write("kind(10 + 20) = ")
print(kind_to_string(kind(result)))

result = 10 / 3
write("kind(10 / 3) = ")
print(kind_to_string(kind(result)))

result = 10.5 + 0.5
write("kind(10.5 + 0.5) = ")
print(kind_to_string(kind(result)))

print("")

