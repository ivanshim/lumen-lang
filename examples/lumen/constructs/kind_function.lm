write("kind(1/2) == kind(3/4): ")
print(kind(1/2) == kind(3/4))

write("kind(3.14) == kind(real(5)): ")
print(kind(3.14) == kind(real(5)))

print("")

# Test 12: Kind values can be used in conditional logic
x = 42
if kind(x) == kind(0)
    print("x is an INTEGER")

y = 1/3
if kind(y) == kind(1/2)
    print("y is a RATIONAL")

z = 2.718
if kind(z) == kind(3.14)
    print("z is a REAL")

print("")

# Test 13: Introspection on computed values
